#!/usr/bin/env bash

usage()
{
    cat <<EOF
Usage: kea-config [OPTIONS]
Options:
     [--prefix]
     [--hgversion]
     [--version]
     [--libs]
     [--cflags]
     [--ldflags]
     [--includes]
     [--hdfincludes]
     [--hdfcflags]
     [--hdflibs]
EOF
    exit $1
}
if test $# -eq 0; then
  usage 1 1>&2
fi
while test $# -gt 0; do
case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
esac
case $1 in
    --prefix)
    echo -n "C:/Miniconda3/envs/quad_sim/Library "
     ;;
    --hgversion)
    echo -n "238 "
     ;;
	--version)
    echo -n "1.4.5 "
     ;;
    --cflags)
    echo -n "-IC:/Miniconda3/envs/quad_sim/Library/include "
      ;;
    --libs)
      echo -n "-LC:/Miniconda3/envs/quad_sim/Library/lib -llibkea "
      ;;
    --ldflags)
      echo -n "C:/Miniconda3/envs/quad_sim/Library/lib "
      ;;
    --includes)
      echo -n "C:/Miniconda3/envs/quad_sim/Library/include "
      ;;
	--hdfincludes)
      echo -n "C:/Miniconda3/envs/quad_sim/Library/include "
      ;;
	--hdfcflags)
      echo -n "-IC:/Miniconda3/envs/quad_sim/Library/include "
      ;;
	--hdflibs)
      echo -n "-LIBPATH:"C:/Miniconda3/envs/quad_sim/Library/lib";hdf5_cpp.lib;hdf5.lib "
      ;;
  esac
  shift
done
echo
